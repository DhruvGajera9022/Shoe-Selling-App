<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroun"
    tools:context=".fragments.CategoryFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categories"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsbold"
                android:layout_weight="4"/>

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:src="@drawable/filter_icon"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="35sp"
                    android:id="@+id/cart4"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="20sp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/cart_icon"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayoutScrollViewBehavior"
            android:layout_marginTop="15sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/nike"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/nike"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/adidas"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/adidas"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/puma"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/puma"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/rebook"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/rebook"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crocs"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/crocs"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/bata"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bata"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/redtape"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="30dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="20dp"
                            android:backgroundTint="@color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/redtape"
                                android:padding="20dp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cate_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="50dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>